<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Plugin.Maui.Calendar.Controls.DayView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"    
    xmlns:models="clr-namespace:Plugin.Maui.Calendar.Models"
    x:Name="dayView"
    x:DataType="models:DayModel"
    BackgroundColor="{Binding BackgroundFullEventColor}">   
    <Border
        x:Name="DayViewBorder"       
        Style="{Binding BackgroundStyle, Mode=OneWay}">
        <FlexLayout
            AlignItems="Center"
            Direction="{Binding EventLayoutDirection}"
            JustifyContent="Center">
            <Label Style="{Binding DaysLabelStyle, Mode=OneWay}" Text="{Binding Date.Day, Mode=OneWay}" />
            <Border IsVisible="{Binding IsEventDotVisible, Mode=OneWay}" Style="{Binding EventStyle, Mode=OneWay}" />
        </FlexLayout>
        <Border.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnTapped" />
        </Border.GestureRecognizers>
    </Border>
</ContentView>

