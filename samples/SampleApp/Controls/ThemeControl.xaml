<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleApp.Controls.ThemeControl"
             x:Name="themeControl"
             xmlns:vm ="clr-namespace:SampleApp.Controls"
             x:DataType="vm:ThemeControl">
    <VerticalStackLayout  RadioButtonGroup.GroupName="themes">
        <Label Text="Feel free to choose the theme" />

        <RadioButton Content="Same as system" 
             IsChecked="{Binding IsSystemThemeChecked, Source={x:Reference themeControl}}">
        </RadioButton>

        <RadioButton Content="Dark (if you're a straight boy)"
             IsChecked="{Binding IsDarkThemeChecked, Source={x:Reference themeControl}}">
        </RadioButton>

        <RadioButton Content="Light (if you like to look at the sun for a long time)"
             IsChecked="{Binding IsLightThemeChecked, Source={x:Reference themeControl}}">
        </RadioButton>

    </VerticalStackLayout>
</ContentView>
