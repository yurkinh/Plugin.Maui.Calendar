<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="SampleApp.Controls.CalendarFooter"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid
        ColumnDefinitions="Auto,*"
        HeightRequest="40"        
        HorizontalOptions="Fill"
        RowSpacing="6"
        VerticalOptions="Fill">
        <Label
            Grid.Column="0"
            Style="{StaticResource FooterLabelStyle}"
            Text="{Binding SelectedDateText}"/>
        <Button
            Grid.Column="1"           
            Command="{Binding ShowHideCalendarCommand, Mode=OneWay}"
            IsVisible="{Binding FooterArrowVisible, Mode=OneWay}"
            Style="{StaticResource ArrowFooterButtonUpStyle}">
            <Button.Triggers>
                <DataTrigger
                    Binding="{Binding CalendarSectionShown, Mode=OneWay}"
                    TargetType="Button"
                    Value="False">
                    <Setter Property="Text" Value="&#xf063;" />
                </DataTrigger>
            </Button.Triggers>
        </Button>
    </Grid>
</ContentView>