<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SampleApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SampleApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SampleApp">

    <TabBar>
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Icon="appicon" />
        <ShellContent ContentTemplate="{DataTemplate local:CalendarPage}" Icon="appicon" />
    </TabBar>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>

